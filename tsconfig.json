{
  "compilerOptions": {
    "target": "es2016",                                  
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",                               
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true, 
    "resolveJsonModule": true,           
    "strict": true,                                      
    "skipLibCheck": true                                 
  },
  "include": ["src/**/*", "packages/**/*" ],
  "exclude": ["node_modules", "**/*.spec.ts", "./src/packages/contracts/typechain-types"],
}
